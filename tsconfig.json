{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./public/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": [ "src/*" ],
      "@img/*": [ "src/images/*" ],
      "@styles/*": [
        "src/styles/*"
      ],
    },
    "types": [
      "node",
      "@types/jest",
      "@testing-library/jest-dom",
      "@testing-library/user-event"
    ],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "public/**/*"
  ]
}